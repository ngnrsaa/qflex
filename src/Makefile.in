TARGET1 = qflex

# The folder where the Cirq Interface Python scripts are stored
CIRQ_IF_DIR = ../python/cirq_interface/

# The name of the shared library that results after compiling QFlex for Pybind11
QFLEXLIB = $(TARGET1)`python3-config --extension-suffix`

OBJS1 = evaluate_circuit.o tensor.o contraction_utils.o \
    read_circuit.o docopt/docopt.o

CXXFLAGS += -Idocopt/ -fPIC

# The flags for the compilation of the Pybind11 interface
PYBINDFLAGS = -Ipybind11/include $(shell python3 -m pybind11 --includes)

$(TARGET1): main.cpp $(OBJS1)
	$(CXX) -o $(@).x $< $(OBJS1) $(CXXFLAGS)


pybind: $(OBJS1)
	$(CXX) -c pybind_main.cpp $(CXXFLAGS) $(PYBINDFLAGS)
	$(CXX) -shared -o $(CIRQ_IF_DIR)/$(QFLEXLIB) $(OBJS1) $(FLAGS)


%.o: %.cpp %.h
	$(CXX) -c $< $(CXXFLAGS) -o $@

.PHONY: clean
clean:
	-rm -f ./*.x ./*.a ./*.so ./*.mod $(OBJS1)
	-rm -f $(CIRQ_IF_DIR)/$(QFLEXLIB)
